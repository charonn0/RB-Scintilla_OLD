#tag WindowCode
	#tag Event
		Sub Open()
		  textSize.ListIndex = GetReference.Style(CurrentStyle).TextSize - 9
		  Dim f As String = GetReference.Style(CurrentStyle).TextFont.Trim
		  For i As Integer = 0 To textFont.ListCount - 1
		    If textFont.List(i) = f Then
		      textFont.ListIndex = i
		      Exit For
		    End If
		  Next
		End Sub
	#tag EndEvent


